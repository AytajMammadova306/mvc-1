@model List<GetTagVM>
@{
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Tags</h4>
                <div class="table-responsive">
                    <a class="btn btn-success" asp-action="Create">Create Tag</a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Products
                                </th>
                                <th>
                                    Settings
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (GetTagVM getTagVM in Model)
                            {
                                count++;
                                <tr>
                                    <td class="py-1">
                                        @count
                                    </td>
                                    <td>
                                        @getTagVM.TagName
                                    </td>
                                    <td>
                                        @getTagVM.ProductCount
                                    </td>
                                    <td>
                                        <a asp-action="delete" asp-route-id="@getTagVM.Id" class="btn btn-danger">
                                            <i class="mdi mdi-delete"></i>
                                        </a>
                                        <a asp-action="update" asp-route-id="@getTagVM.Id" class="btn btn-warning">
                                            <i class="mdi mdi-pencil"></i>
                                        </a>
                                        <a class="btn btn-primary">
                                            <i class="mdi mdi-open-in-new"></i>
                                        </a>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>